<!DOCTYPE html>
<html>
  <body>
   <form action="/update" method="POST">
      <ul>
        <li>
          <select name="category">
            <% Carraway::Category.all.each do |category| %>
              <option value="<%= category.key %>"<%= @post.category == category ? 'selected' : nil %>><%= category.title %></option>
            <% end %>
          </select>
        </li>
        <li>
          <%= @post.path %>
          <input type="hidden" name="path" value="<%= @post.path %>">
        </li>
        <li><input type="text" name="title" placeholder="title" value=<%= @post.title %>></li>
        <li><textarea name="body"><%= @post.body %></textarea></li>
      </ul>
      <button type="submit">保存</button>
    </form>
  </body>
</html>
